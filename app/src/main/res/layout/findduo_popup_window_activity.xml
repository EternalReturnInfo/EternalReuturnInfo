<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.fragment.findduo.FindduoPopupWindow">

    <Button
        android:id="@+id/findduo_server_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/shape_findduo_btn"
        android:text="서버 선택"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findduo_gender_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/shape_findduo_btn"
        android:text="성별 선택"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/findduo_server_btn"
        app:layout_constraintStart_toEndOf="@+id/findduo_server_btn"
        app:layout_constraintTop_toTopOf="@+id/findduo_server_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/findduo_tier_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/shape_findduo_btn"
        android:text="티어 선택"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/findduo_gender_btn"
        app:layout_constraintStart_toEndOf="@+id/findduo_gender_btn"
        app:layout_constraintTop_toTopOf="@+id/findduo_gender_btn" />

    <Button
        android:id="@+id/findduo_most_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/shape_findduo_btn"
        android:text="실험체 선택"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/findduo_tier_btn"
        app:layout_constraintStart_toEndOf="@+id/findduo_tier_btn"
        app:layout_constraintTop_toTopOf="@+id/findduo_tier_btn" />

    <Button
        android:id="@+id/findduo_yes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="136dp"
        android:text="등록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findduo_gender_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>